{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": ["@tsconfig/node-lts/tsconfig.json", "@tsconfig/strictest/tsconfig.json", "@tsconfig/esm/tsconfig.json"],
  "compilerOptions": {
    "typeRoots": [
      "node_modules/@types",
      "src/typings"
    ],
    "verbatimModuleSyntax": false,
    "isolatedModules": false
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}